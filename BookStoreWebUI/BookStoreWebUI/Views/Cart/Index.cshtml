@model IEnumerable<BookStoreWebUI.Models.Cart.CartInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        @if (Model != null) 
        {
            foreach(var item in Model) 
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="@item.ImageUrl" class="img-fluid rounded-start cart-image" alt="@item.Title">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <h5 class="card-title">@item.Title</h5>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <input type="text" id="Qty" class="form-control custom-form-control d-inline-block w-auto" value="@item.Qty" min="1" readonly>
                                            </div>
                                            <div>
                                                <h6 class="text-muted mb-0">Total : @String.Format("{0:N2}", item.TotalAmount) MMK</h6>
                                            </div>
                                        </div>
                                        <br />
                                        <button class="btn btn-success btnCheckOut" data-cartid="@item.Id">Checkout</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            }
        }
    </div>
</div>

@section scripts{
    <script>
        userCart.Initialize();
    </script>    
}